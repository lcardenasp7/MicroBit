            <div id="invernadero" class="project-content">
                <div class="highlight-box">
                    <h3>üå± Proyecto 2: Mini Invernadero Automatizado</h3>
                    <p><strong>Problema:</strong> Las plantas necesitan condiciones espec√≠ficas de temperatura, humedad e iluminaci√≥n para crecer, pero es dif√≠cil monitorear constantemente.</p>
                    <p><strong>Soluci√≥n:</strong> Un invernadero que mantiene autom√°ticamente las condiciones ideales para el crecimiento de plantas.</p>
                </div>

                <h4 style="color: #667eea; margin: 25px 0 15px 0; font-size: 1.5rem;">üíª C√≥digo del Invernadero</h4>
                <div class="code-box">// Mini Invernadero Automatizado
let temperaturaIdeal = 25  // ¬∞C
let humedadMinima = 40     // %

// Pines de componentes
let pinBombaAgua = DigitalPin.P1
let pinVentilador = DigitalPin.P2

// Funci√≥n de riego autom√°tico
function activarRiego(duracion: number) {
    basic.showIcon(IconNames.Umbrella)
    pins.digitalWritePin(pinBombaAgua, 1)
    basic.pause(duracion)
    pins.digitalWritePin(pinBombaAgua, 0)
    basic.showIcon(IconNames.Yes)
}

// Control manual de riego
input.onButtonPressed(Button.A, function () {
    activarRiego(3000)  // 3 segundos de riego
})

// Bucle principal del invernadero
basic.forever(function () {
    let temperatura = input.temperature()
    let humedad = Math.map(input.lightLevel(), 0, 255, 100, 0)
    
    basic.showNumber(temperatura)
    basic.pause(2000)
    
    // Control autom√°tico
    if (humedad < humedadMinima) {
        activarRiego(2000)
    }
    
    if (temperatura > temperaturaIdeal + 5) {
        pins.digitalWritePin(pinVentilador, 1)
        basic.showIcon(IconNames.Surprised)
    } else {
        pins.digitalWritePin(pinVentilador, 0)
        basic.showIcon(IconNames.Happy)
    }
    
    basic.pause(5000)
})

basic.showString("INVERNADERO")</div>
            </div>

