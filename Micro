// Funci√≥n para controlar LEDs
function controlarLEDs(rojo: boolean, amarillo: boolean, verde: boolean) {
    pins.digitalWritePin(pinRojo, rojo ? 1 : 0)
    pins.digitalWritePin(pinAmarillo, amarillo ? 1 : 0)
    pins.digitalWritePin(pinVerde, verde ? 1 : 0)
}

