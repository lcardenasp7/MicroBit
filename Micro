    <script>
        function showSection(sectionId) {
            // Ocultar todas las secciones
            const sections = document.querySelectorAll('.section');
            sections.forEach(section => {
                section.classList.remove('active');
            });
            
            // Remover clase active de todas las tarjetas de navegaci√≥n
            const navCards = document.querySelectorAll('.nav-card');
            navCards.forEach(card => {
                card.classList.remove('active');
            });
            
            // Mostrar la secci√≥n seleccionada
            document.getElementById(sectionId).classList.add('active');
            
            // Activar la tarjeta correspondiente
            event.target.closest('.nav-card').classList.add('active');
            
            // Scroll suave hacia arriba
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function showProject(projectId) {
            // Ocultar todos los contenidos de proyecto
            const projects = document.querySelectorAll('.project-content');
            projects.forEach(project => {
                project.classList.remove('active');
            });
            
            // Remover clase active de todos los botones de proyecto
            const buttons = document.querySelectorAll('#proyectos .nav-btn');
            buttons.forEach(button => {
                button.classList.remove('active');
            });
            
            // Mostrar el proyecto seleccionado
            document.getElementById(projectId).classList.add('active');
            
            // Activar el bot√≥n correspondiente
            event.target.classList.add('active');
        }

        // Efectos de entrada progresiva
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.nav-card, .concept-card, .sensor-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
</body>
</html>
        let segundos = Math.floor((tiempoVerde - tiempoTranscurrido) / 1000)
        basic.showNumber(Math.max(segundos, 0))
        
        if (movimientoDetectado || tiempoTranscurrido >= tiempoVerde) {
            estadoSemaforo = "amarillo"
            tiempoInicio = tiempoActual
        }
        
    } else if (estadoSemaforo == "amarillo") {
        controlarLEDs(false, true, false)
        basic.showIcon(IconNames.Triangle)
        
        if (tiempoTranscurrido >= tiempoAmarillo) {
            estadoSemaforo = "rojo"
            tiempoInicio = tiempoActual
        }
        
    } else if (estadoSemaforo == "rojo") {
        controlarLEDs(true, false, false)
        let segundosRojo = Math.floor((tiempoRojo - tiempoTranscurrido) / 1000)
        basic.showNumber(Math.max(segundosRojo, 0))
        
        if (tiempoTranscurrido >= tiempoRojo) {
            estadoSemaforo = "verde"
            tiempoInicio = tiempoActual
            basic.showIcon(IconNames.Happy)
            basic.pause(1000)
        }
    }
    
    basic.pause(100)
})

// Inicializaci√≥n
basic.showString("SEMAFORO OK")
