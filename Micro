            <div id="estacion" class="project-content">
                <div class="highlight-box">
                    <h3>üå¶Ô∏è Proyecto 3: Estaci√≥n Meteorol√≥gica Personal</h3>
                    <p><strong>Problema:</strong> No hay informaci√≥n meteorol√≥gica espec√≠fica del entorno escolar o del hogar.</p>
                    <p><strong>Soluci√≥n:</strong> Una estaci√≥n que mide y registra condiciones clim√°ticas locales en tiempo real.</p>
                </div>

                <h4 style="color: #667eea; margin: 25px 0 15px 0; font-size: 1.5rem;">üíª C√≥digo de la Estaci√≥n</h4>
                <div class="code-box">// Estaci√≥n Meteorol√≥gica
let temperaturas: number[] = []
let modoDisplay = "temperatura"

// Funci√≥n para leer sensores
function leerSensores() {
    return {
        temperatura: input.temperature(),
        luz: input.lightLevel(),
        humedad: Math.map(input.lightLevel(), 0, 255, 80, 30)
    }
}

// Cambiar modo de visualizaci√≥n
input.onButtonPressed(Button.A, function () {
    if (modoDisplay == "temperatura") {
        modoDisplay = "luz"
    } else {
        modoDisplay = "temperatura"  
    }
    basic.showString(modoDisplay)
})

// Bucle principal
basic.forever(function () {
    let datos = leerSensores()
    
    // Almacenar temperatura
    temperaturas.push(datos.temperatura)
    if (temperaturas.length > 10) {
        temperaturas.shift()
    }
    
    // Mostrar seg√∫n modo
    if (modoDisplay == "temperatura") {
        basic.showNumber(datos.temperatura)
    } else {
        basic.showNumber(datos.luz)
    }
    
    // Alertas
    if (datos.temperatura > 30) {
        basic.showIcon(IconNames.Sad)
    } else {
        basic.showIcon(IconNames.Happy)
    }
    
    basic.pause(3000)
})

basic.showString("METEO")</div>
